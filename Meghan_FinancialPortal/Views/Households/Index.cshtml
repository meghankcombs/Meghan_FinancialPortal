@model IEnumerable<Meghan_FinancialPortal.Models.Household>

<div class="page-header">
    <h1><span class="text-muted font-weight-light"><i class="page-header-icon ion-ios-keypad"></i>Household</span></h1>
</div>
<div class="panel">
    <div class="panel-heading">
        <a href="@Url.Action("Create", "Households")" class="panel-title"><i class="fa fa-calendar-plus-o"></i> Create Household</a>
    </div>
    <div class="panel-body">
        <div class="table-primary">
            <table class="table table-striped table-bordered" id="householdsTable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>People in Household</th>
                        <th># of Acconts</th>
                        <th># of Invites Sent</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var household in Model)
                    {
                        <tr class="odd gradeX">
                            <td>@household.Name</td>
                            <td class="center"><span class="label label-info">@household.Users.Count()</span></td>
                            <td class="center"><span class="label label-warning">@household.PersonalAccounts.Count()</span></td>
                            <td class="center"><span class="label label-primary">@household.Invites.Count()</span></td>
                            <td class="center">
                                <div class="btn-group" style="margin-top: 4px;">
                                    <a href="@Url.Action("Details", "Households", new { id = household.Id })" class="btn btn-xs btn-primary btn-outline myIndexBtns" data-toggle="tooltip" title="Details"><i class="fa fa-list"></i></a>
                                    <a href="@Url.Action("Edit", "Households", new { id = household.Id })" class="btn btn-xs btn-primary btn-outline myIndexBtns" data-toggle="tooltip" title="Edit"><i class="fa fa-edit"></i></a>
                                    <a href="@Url.Action("Delete", "Households", new { id = household.Id })" class="btn btn-xs btn-primary btn-outline myIndexBtns" data-toggle="tooltip" title="Delete"><i class="fa fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $('#householdsTable').DataTable();
    </script>
}
